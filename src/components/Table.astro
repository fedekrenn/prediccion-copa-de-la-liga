---
import Row from "./Row.astro";
import type { Prediction } from "../types/tableFormat";

const data = await fetch("http://localhost:4321/team-info.json");
const results = await data.json();
---

<table>
  <thead>
    <tr>
      <th>Posici√≥n</th>
      <th class="team-name">Equipo</th>
      <th>% en copa de la liga</th>
      <th class="points">Puntos estimados al finalizar el campeonato</th>
    </tr>
  </thead>
  <tbody>
    {results.map((equipo: Prediction) => <Row {equipo} />)}
  </tbody>
</table>

<style>
  table {
    margin: 0 auto;
    width: auto;
  }

  .team-name {
    width: 220px;
  }

  .points {
    width: 200px;
  }
</style>
